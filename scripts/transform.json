{
    "from_asset_path": "{from_container}/{from_medallion_layer}/test_data.parquet",
    "to_asset_path": "{to_container}/{to_medallion_layer}/processed_data.parquet",
    "from_medallion_layer": "bronze",
    "to_medallion_layer": "silver",
    "from_container": "scratch",
    "to_container": "scratch",
    "spark_config": {
        "spark.sql.debug.maxToStringFields": "100"
    },
    "transforms": [
        {
            "transform_type": "trim_columns",
            "columns": [
                "Series_reference",
                "Period",
                "Month"
            ]
        },
        {
            "transform_type": "rename_columns",
            "columns": [
                {
                    "source_column": "Series_reference",
                    "target_column": "Reference"
                },
                {
                    "source_column": "Period",
                    "target_column": "Month"
                },
                {
                    "source_column": "Magnitude",
                    "target_column": "Level"
                }
            ]
        },
        {
            "transform_type": "include",
            "transform_rule_path": "scripts/base_transform_1.json"
        },
        {
            "transform_type": "drop_columns",
            "columns": [
                "Series_title_5"
            ]
        },
        {
            "transform_type": "split_column",
            "source_column": "FIN_PERIOD",
            "delimiter": "_",
            "target_columns": [
                "FROM_QUARTER",
                "TO_QUARTER"
            ]
        },
        {
            "transform_type": "merge_columns",
            "target_column": "FIN_PERIOD",
            "delimiter": ">>",
            "source_columns": [
                "FROM_QUARTER",
                "Month"
            ]
        },
        {
            "transform_type": "simplemap",
            "columns": [
                "FROM_QUARTER",
                "TO_QUARTER"
            ],
            "mapping": {
                "F": "First",
                "C": "Current",
                "R": "Retired"
            }
        },
        {
            "transform_type": "map",
            "default_value": "Unknown",
            "columns": [
                "FROM_QUARTER",
                "TO_QUARTER"
            ],
            "mapping": {
                "F": "First",
                "C": "Current",
                "R": "Retired"
            }
        },
        {
            "transform_type": "select_expression",
            "columns": [
                "Reference",
                "Month",
                "Name",
                "Age",
                "STATUS",
                "Level",
                "Level + 20 as New_Level",
                "Group",
                "Series_title_1"
            ],
            "filter":[
                {
                    "column": "Level",
                    "operator": ">",
                    "value": 0
                }
            ]
        },
        {
            "transform_type": "group_by",
            "columns": [
                "Reference",
                "Name",
                "Age",
                "STATUS",
                "New_Level",
                "Group",
                "Series_title_1"
            ],
            "aggregations": [
                {
                    "target_column": "Count_Level",
                    "function": "count",
                    "source_column": "New_Level"
                },
                {
                    "target_column": "Sum_Level",
                    "function": "sum",
                    "source_column": "New_Level"
                }
            ]
        },
        {
            "transform_type": "update_columns",
            "columns": [
                {
                    "source_column": "Name",
                    "target_value": "Ursula",
                    "conditions": [
                        {
                            "column": "Sum_Level",
                            "operator": "<",
                            "value": 1000
                        },
                        {
                            "column": "Sum_Level",
                            "operator": ">",
                            "value": 0
                        }
                    ] 
                },
                {
                    "source_column": "STATUS",
                    "target_value": "Job Related",
                    "conditions": [
                        {
                            "column": "Series_title_1",
                            "operator": "like",
                            "value": "%jobs%"
                        }
                    ] 
                }
            ]
        },
        {
            "transform_type": "set_column_type",
            "columns": [
                {
                    "column": "RowNum",
                    "type": "counter"
                },
                {
                    "column": "Age",
                    "type": "int"
                },
                {
                    "column": "New_Level",
                    "type": "float"
                }
            ]
        }
    ]
}
